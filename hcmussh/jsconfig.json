{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "jsx": "react",
        "target": "es6",
        "paths": {
            "view/*": [
                "view/*"
            ],
            "modules/*": [
                "modules/*"
            ],
            "node_modules/*": [
                "node_modules/*"
            ],
            "asset/*": [
                "asset/*"
            ],
            "config/*": [
                "config/*"
            ]
        }
    },
    "include": [
        "view",
        "modules/*",
        "asset",
        "config"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}