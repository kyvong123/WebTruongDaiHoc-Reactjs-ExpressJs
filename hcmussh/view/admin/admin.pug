doctype html
html(lang='vi')
    head
        meta(charset='utf-8')
        title #{htmlWebpackPlugin.options.title}
        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=0, maximum-scale=1, minimum-scale=1')
        meta(content=htmlWebpackPlugin.options.keywords.toString())
        meta(content=htmlWebpackPlugin.options.description name='description')
        link(rel='stylesheet' type='text/css' href='/css/font-awesome.min.css')
        link(rel='stylesheet' type='text/css' href='/css/bootstrap-datetimepicker.min.css')
        link(rel='stylesheet' type='text/css' href='/js/plugins/jquery-minicolors/css/jquery.minicolors.css')
    body
        #app.app.sidebar-mini.rtl
        script(type='text/javascript' src='/js/jquery.min.js')
        script(type='text/javascript' src='/js/popper.min.js')
        script(type='text/javascript' src='/js/jquery-ui.min.js')
        script(type='text/javascript' src='/js/bootstrap.min.js')
        script(type='text/javascript' src='/js/plugins/bootstrap-datepicker.min.js')
        script(type='text/javascript' src='/js/plugins/bootstrap-datetimepicker.min.js')
        script(type='text/javascript' src='/js/plugins/bootstrap-notify.min.js')
        script(type='text/javascript' src='/js/plugins/select2.min.js')
        script(type='text/javascript' src='/js/plugins/chart.js')
        script(type='text/javascript' src='/js/plugins/ckeditor/ckeditor.js')
        script(type='text/javascript' src='/js/plugins/moment.min.js')
        script(type='text/javascript' src='/js/plugins/fullcalendar.min.js')
        script(type='text/javascript' src='/js/plugins/locale-all.min.js')
        script(type='text/javascript' src='/js/plugins/pdf.min.js')
        script(type='text/javascript' src='/js/plugins/jquery-minicolors/js/jquery.minicolors.min.js')
        script(type='text/javascript' src='/js/plugins/easepick.js')
        each item in htmlWebpackPlugin.files.js
            if item.indexOf('/js/admin')==0
                script(type='text/javascript' src=`${item.substring(0, item.indexOf('.js')+3)}?v=${htmlWebpackPlugin.options.version}`)